<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bOpenWeb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/open_web"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bCountryList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Country_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bOpenWeb" />

    <Button
        android:id="@+id/bCall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/phone_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bCountryList" />
    <Button
        android:id="@+id/bMaps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/maps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bCall" />
    <Button
        android:id="@+id/bPhoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/take_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bMaps" />
    <Button
        android:id="@+id/bSendMail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/send_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>