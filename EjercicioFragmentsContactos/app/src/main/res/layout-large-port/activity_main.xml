<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcvListFragment"
        android:name="com.jonander2233.ejerciciofragmentscontactos.fragments.ListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_list_contactos" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcvDetailFragment"
        android:name="com.jonander2233.ejerciciofragmentscontactos.fragments.DetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/detail_contacto" />
</LinearLayout>